{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch Web App (starts at login.html)",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            // This URL points to your running lite-server
            "url": "http://localhost:3000/login.html", 
            "webRoot": "${workspaceFolder}",
            // We keep the path to Firefox from our previous fix
            "firefoxExecutable": "C:\\Users\\Temp\\AppData\\Local\\Mozilla Firefox\\firefox.exe"
        },
        // The other configurations can remain as they are for other purposes
        {
            "name": "Attach",
            "type": "firefox",
            "request": "attach"
        },
        {
            "name": "Launch WebExtension",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "addonPath": "${workspaceFolder}"
        }
    ]
}